<%- include('../partials/header.ejs') %>

<a href="/notifications/new" class="btn btn-danger">Add a new notification</a>
<% for( let  notif of allNotifs ) { %>
    <div>
        body: <%= notif.body.slice(0, 5) %>...., 
        author: <%= notif.author %>
        <button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="left" title="<%= notif.body %>">
            Read More
          </button>
        <form action="/notifications/<%= notif._id %>?_method=DELETE" method="post">
            <input type="submit" value="delete">
        </form>
    </div>
<% } %>
<%- include('../partials/footer.ejs') %>